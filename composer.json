{
    "name": "mucts\/laravel-wechatpay-v3",
    "description": "用于 Laravel/Lumen 框架的微信支付 API v3 组件",
    "authors": [
        {
            "name": "Herry",
            "email": "yuandeng@aliyun.com"
        }
    ],
    "require": {
        "ext-curl": "^7.2|^8.0",
        "ext-json": "^7.2|^8.0",
        "ext-openssl": "^7.2|^8.0",
        "php": "^7.2|^8.0",
        "illuminate/support": "^7.5",
        "illuminate/container": "^7.5",
        "illuminate/translation": "^7.5",
        "guzzlehttp/guzzle": "^6.5",
        "pimple/pimple": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "orchestra/testbench": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "MuCTS\\Laravel\\WeChatPayV3\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MuCTS\\Laravel\\WeChatPayV3\\Test\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MuCTS\\Laravel\\WeChatPayV3\\ServiceProvider"
            ],
            "aliases": {
                "WeChatPayV3": "MuCTS\\Laravel\\WeChatPayV3\\Facades\\WeChatPayV3"
            }
        }
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer/"
        }
    }
}
